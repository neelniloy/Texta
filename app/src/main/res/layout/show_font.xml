<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#212121"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:id="@+id/font_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Font Name"
                android:textColor="#FFE"
                />
            <TextView
                android:layout_below="@+id/linearFont"
                android:id="@+id/font_style"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Font Style"
                android:textStyle="normal"
                android:textColor="#FFF"
                />

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:id="@+id/linearFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/copy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/copy_blue" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/share_blue"/>


        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#FFF" />

</androidx.cardview.widget.CardView>